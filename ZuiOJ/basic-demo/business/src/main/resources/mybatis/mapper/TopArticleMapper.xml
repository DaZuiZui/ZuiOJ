<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazuizui.business.mapper.TopArticleMapper">
    <!--
        插入置顶文章
    -->
    <insert id="addTopArticle">
        insert into
            top_article
        value (
            null,
            #{articleId},
            #{createBy},
            #{createTime}
        )
    </insert>

    <!--
        查询置顶文章
    -->
    <select id="queryAllTopArticle"  resultType="com.dazuizui.basicapi.entry.ArticleJSON">
        SELECT
            a.id,
            a.title,
            a.introduce,
            a.article_type,
            a.language,
            a.technology_type,
            a.md_text_id,
            a.create_by,
            a.create_time,
            a.likes,
            (SELECT name from user where id = a.create_by LIMIT 1) as 'create_by_name'
        FROM
            top_article t1
        INNER JOIN
            article a
        on t1.article_id = a.id
        where
            a.del_flag = 0
        order by
            create_time
                desc

    </select>
</mapper>