<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazuizui.business.mapper.ArticleAttributeMapper">
    <!--
          通过状态获取指定数量
    -->
    <select id="queryCountByStatus" resultType="long">
        select
            <if test="status == 0">
                public_article
            </if>
            <if test="status == 1">
                private_article
            </if>
            <if test="status == 2">
                banned_article
            </if>
        from
            article_attribute
    </select>


    <update id="increaseTheNumberOfTable">
        update
            article_attribute
        <set>
            <if test="type == 1">
                number = number  + #{num},
            </if>
            <if test="status == 0">
                public_article = public_article + #{num},
            </if>
            <if test="status == 1">
                private_article = private_article + #{num},
            </if>
            <if test="status == 2">
                banned_article =   banned_article + #{num},
            </if>
        </set>
    </update>
</mapper>