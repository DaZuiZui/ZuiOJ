<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazuizui.business.mapper.QuestionBankMapper">
    <!--
        物理删除问题
    -->
    <update id="deleteQuestionById">
        update
            question_bank
        set
            del_flag = 1
        where
            id = #{id}
    </update>

    <!--
        物理删除问题详细页面
    -->
    <delete id="deleteQuestionDetalied">
        delete from
            question_bank_detailed
        where
            id = #{id}
    </delete>
    <!--
        查看问题数量
    -->
    <select id="queryCountOfQuestion" resultType="long">
        select
            count(0)
        from
            question_bank
        where
            status = 0
    </select>

    <!--
        管理员查看问题数量
    -->
    <select id="queryCountOfQuestionOfAdmin" resultType="long">
        select
            count(0)
        from
            question_bank
    </select>

    <!--
        通过id查询问题
    -->
    <select id="getQuestionById" resultType="com.dazuizui.basicapi.entry.vo.QuestionBankVo">
        SELECT
            t1.id,
            t1.short_name,
            t1.chinese_name,
            t1.english_name,
            t1.grade,
            t1.question_type,
            t1.create_by_name,
            t1.status,
            t2.md_cn
        FROM
            question_bank t1
                LEFT JOIN
            question_bank_detailed t2
            on
                t1.id =  t2.question_id

        where
            t1.id = #{id} and
            t1.status = #{status} and
            t1.del_flag = #{delFlag}
    </select>

    <!--
        用户分页查询问题
    -->
    <select id="pagingToGetQuestion" resultType="com.dazuizui.basicapi.entry.QuestionBank">
        select
            id,
            short_name,
            chinese_name,
            grade,
            create_by_name
        from
            question_bank
        where
            status = 0 and
            del_flag = 0
        limit
            #{pages},
            #{number}
    </select>

    <!--
        管理员分页查询题库
    -->
    <select id="pagingToGetQuestionOfAdmin" resultType="com.dazuizui.basicapi.entry.QuestionBank">
        select
            id,
            short_name,
            chinese_name,
            grade,
            create_by_name
        from
            question_bank
        where
            del_flag = 0
        limit
            #{pages},
            #{number}
    </select>

    <!--
        提交问题
    -->
    <insert id="postQuestion" useGeneratedKeys="true" keyProperty="id">
        insert into
            question_bank
        value(
            null,
            #{shortName},
            #{englishName},
            #{chineseName},
            #{grade},
            #{questionType},
            #{createById},
            #{createByName},
            #{createTime},
            #{updateById},
            #{updateByName},
            #{updateTime},
            #{status},
            0
        )
    </insert>

    <insert id="postQuestionDetailed">
        insert into
            question_bank_detailed
        value(
            null,
            #{id},
            #{mdCn},
            #{htmlCn},
            #{mdEn},
            #{htmlCn}
        )
    </insert>
</mapper>