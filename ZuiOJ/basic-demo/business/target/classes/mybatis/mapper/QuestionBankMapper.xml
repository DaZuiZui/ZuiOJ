<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazuizui.business.mapper.QuestionBankMapper">
    <!--
        更改问题详细信息
    -->
    <update id="updateQuestionDetailedById">
        update
            question_bank_detailed
        set
            md_cn = #{mdCn}
        where
            question_id = #{id}
    </update>

    <!--
        修改问题信息
    -->
    <update id="updateQuestionById">
        update
            question_bank q1
        set
            short_name = #{shortName} ,
            english_name = #{englishName} ,
            chinese_name = #{chineseName} ,
            grade = #{grade},
            status = #{status},
            update_by_id = #{updateById},
            update_time = #{updateTime}
        where
            id = #{id}
    </update>

    <!--
        管理员通过id获取题目
    -->
    <select id="adminGetQuestionById" resultType="com.dazuizui.basicapi.entry.vo.QuestionBankVo">
        SELECT
            q1.id,
            q1.short_name,
            q1.chinese_name,
            q1.english_name,
            q1.grade,
            q1.question_type,
            q1.create_by_name,
            q1.status,
            q2.md_cn
        FROM
            question_bank q1
                INNER JOIN
            question_bank_detailed q2
        ON
            q1.id = #{id} AND
            q2.question_id = #{id}
        limit 1
    </select>

    <!--
        逻辑删除问题
    -->
    <update id="deleteQuestionById">
        update
            question_bank
        set
            del_flag = 1
        where
            id = #{id}
    </update>

    <!--
        物理删除问题详细页面
    -->
    <delete id="deleteQuestionDetalied">
        delete from
            question_bank_detailed
        where
            id = #{id}
    </delete>
    <!--
        查看问题数量
    -->
    <select id="queryCountOfQuestion" resultType="long">
        select
            count(0)
        from
            question_bank
        where
            status = 0
    </select>

    <!--
        管理员查看问题数量
    -->
    <select id="queryCountOfQuestionOfAdmin" resultType="long">
        select
            count(0)
        from
            question_bank
    </select>

    <!--
        比赛时候通过id查询问题
    -->
    <select id="getQuestionByIdDuringContest" resultType="com.dazuizui.basicapi.entry.vo.QuestionBankVo">
        SELECT
            t1.id,
            t1.short_name,
            t1.chinese_name,
            t1.english_name,
            t1.grade,
            t1.question_type,
            t1.create_by_name,
            t1.status,
            t2.md_cn
        FROM
            question_bank t1
                LEFT JOIN
            question_bank_detailed t2
            on
                t1.id =  t2.question_id
        where
            t1.id = #{id} and
            t1.del_flag = #{delFlag}
        limit 1
    </select>

    <!--
        通过id查询问题
    -->
    <select id="getQuestionById" resultType="com.dazuizui.basicapi.entry.vo.QuestionBankVo">
        SELECT
            t1.id,
            t1.short_name,
            t1.chinese_name,
            t1.english_name,
            t1.grade,
            t1.question_type,
            t1.create_by_name,
            t1.status,
            t2.md_cn
        FROM
            question_bank t1
                LEFT JOIN
            question_bank_detailed t2
            on
                t1.id =  t2.question_id
        where
            t1.id = #{id} and
            t1.status = #{status} and
            t1.del_flag = #{delFlag}
        limit 1
    </select>

    <!--
        用户分页查询问题
    -->
    <select id="pagingToGetQuestion" resultType="com.dazuizui.basicapi.entry.QuestionBank">
        select
            id,
            short_name,
            chinese_name,
            grade,
            create_by_name
        from
            question_bank
        where
            status = 0 and
            del_flag = 0
        limit
            #{pages},
            #{number}
    </select>

    <!--
        管理员分页查询题库
    -->
    <select id="pagingToGetQuestionOfAdmin" resultType="com.dazuizui.basicapi.entry.QuestionBank">
        select
            id,
            short_name,
            chinese_name,
            grade,
            create_by_name,
            status
        from
            question_bank
        where
            del_flag = 0
        limit
            #{pages},
            #{number}
    </select>

    <!--
        提交问题
    -->
    <insert id="postQuestion" useGeneratedKeys="true" keyProperty="id">
        insert into
            question_bank
        value(
            null,
            #{shortName},
            #{englishName},
            #{chineseName},
            #{grade},
            #{questionType},
            #{createById},
            #{createByName},
            #{createTime},
            #{updateById},
            #{updateByName},
            #{updateTime},
            #{status},
            0
        )
    </insert>

    <!--
        提交问题详细
    -->
    <insert id="postQuestionDetailed">
        insert into
            question_bank_detailed
        value(
            null,
            #{id},
            #{mdCn},
            #{htmlCn},
            #{mdEn},
            #{htmlCn}
        )
    </insert>

    <!--
       分页获取题库 通过status 和delFLag
    -->
    <select id="pagingToGetQuestionBankListByStatusAndDelFlag"  resultType="com.dazuizui.basicapi.entry.QuestionBank">
        select
            id,
            short_name,
            chinese_name,
            grade,
            create_by_name,
            status,
               del_flag
        from
            question_bank
        <where>
            <if test="delFlag == 1">
                del_flag = #{delFlag}
            </if>
            <if test="delFlag == 0">
                status = #{status} and
                del_flag = #{delFlag}
            </if>
        </where>

        limit
            #{start},
            #{number}
    </select>
</mapper>