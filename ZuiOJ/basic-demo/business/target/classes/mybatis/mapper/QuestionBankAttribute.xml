<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazuizui.business.mapper.QuestionBankAttribute">
    <!--
        管理员查看题目数量没有删除题目
    -->
    <select id="adminQueryQuestionListDidNotDeleteQuestion" resultType="Long" >
        select
            number
        from
            question_bank_attribute
    </select>

    <!--
        修改题解数量
    -->
    <update id="updateQuestionAttribute">
        update
             question_bank_attribute
        <set>


            <if test="oldstatus == 0">
                public_question = public_question - #{num},
            </if>
            <if test="oldstatus == 1">
                exam_question = exam_question - #{num},
            </if>
            <if test="oldstatus == 2">
                private_question = private_question - #{num},
            </if>
            <!--
                new data
            -->
            <if test="status ==0">
                public_question = public_question + #{num}
            </if>
            <if test="status == 1">
                exam_question = exam_question + #{num}
            </if>
            <if test="status == 2">
                private_question = private_question + #{num}
            </if>
        </set>
    </update>

    <update id="updateQuestionnumber">
        update
            question_bank_attribute
        <set>
            <!--添加题目的情况-->
            <if test="type == 1">
                number = number+#{num},
                <if test="status == 0">
                    public_question = public_question + #{num},
                </if>
                <if test="status == 1">
                    exam_question = exam_question + #{num},
                </if>
                <if test="status == 2">
                    private_question = private_question+#{num},
                </if>
            </if>

            <!--修改题目的情况-->
            <if test="type == 0">
                del_question = del_question + #{num},
                <if test="status == 0">
                    public_question = public_question - #{num},
                </if>
                <if test="status == 2">
                    private_question = private_question - #{num},
                </if>
                <if test="status == 1">
                    exam_question = exam_question - #{num},
                </if>
            </if>
        </set>
    </update>
</mapper>