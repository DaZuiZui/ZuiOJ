<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazuizui.business.mapper.ContestMapper">
    <select id="getQuestionListInContest" resultType="com.dazuizui.basicapi.entry.QuestionBank">

    </select>

    <!--
        获取比赛介绍信息
    -->
    <select id="getEventById" resultType="com.dazuizui.basicapi.entry.Contest">
        SELECT
            t1.id,
            t1.name,
            t1.start_time,
            t1.parsing_rule,
            t1.contest_type,
            t1.end_time,
            t1.post_match_processing,
            t2.html_text,
            t2.md_text
        from
            contest t1
                LEFT JOIN
            contest_detailed t2
            on
                t1.id =  t2.contest_id
        where t1.id = #{id}

    </select>
    <!--
        获取往期赛制
    -->
    <select id="getPastevents" resultType="com.dazuizui.basicapi.entry.Contest">
        SELECT
            id,
            name,
            start_time,
            parsing_rule,
            contest_type,
            end_time,
            post_match_processing,
            status
        from
            contest
        where
            now() &gt;= end_time and
            del_flag = 0 and
            status = 0;
    </select>

    <!--
        获取未来赛制
    -->
    <select id="getFutureEvents" resultType="com.dazuizui.basicapi.entry.Contest">
        SELECT
            id,
            name,
            start_time,
            parsing_rule,
            contest_type,
            end_time,
            post_match_processing,
            status
        from
            contest
        where
            now() &lt;= end_time and
            del_flag = 0 and
            status = 0;
    </select>

    <insert id="insertConTest" useGeneratedKeys="true" keyProperty="id">
        insert into
            contest
        value(
                null,
                #{name},
                #{startTime},
                #{parsingRule},
                #{contestType},
                #{endTime},
                #{postMatchProcessing},
                #{createById},
                #{createByName},
                #{createTime},
                #{updateById},
                #{updateByName},
                #{updateTime},
                0,
                0
            )
    </insert>


    <insert id="insertConTestDetailed" >
        insert into
            contest_detailed
        value(
            null,
            #{id},
            #{mdText},
            #{htmlText}
        )
    </insert>

    <select id="queryTheContestById" resultType="com.dazuizui.basicapi.entry.Contest">
        select
            id,
            name,
            startTime,
            contestType,
            endTime,
    </select>
</mapper>